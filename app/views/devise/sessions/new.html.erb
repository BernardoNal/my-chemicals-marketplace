<div class="container mt-4"> <!-- Adiciona a classe text-center para centralizar -->
  <div class="col-md-4 mx-auto p-4 border border-dark rounded-5 bg-white">


<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label_html: { class: ''},
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit , "Log in", class: 'btn-primary py-8 my-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

  </div>
</div>
