<div class="container mt-4">
  <div class="form-shape col-md-4 mx-auto">
    <h2 class = "form-title">Entrar</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label_html: { class: ''},
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password, label: "Senha",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Lembrar login", as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit , "Entrar", class: 'my-2 btn-login' %>
      </div>
    <% end %>
    <div class="row">
     <div class='col-12 mx-auto mt-2 text-center'>
      <%= render "devise/shared/links" %>
     </div>
    </div>

  </div>
</div>
