<div class="container">
  <div class="row col-8">
    <div class="card-trip">
      <%= cl_image_tag @product.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-trip-infos">
        <div>
          <h2>Product:</h2>
          <p> <%= @product.name %> </p>
          <br>
          <h2>Description:</h2>
          <p> <%= @product.description %> </p>
        </div>
      </div>
      <div class="card-trip-infos">
        <div>
          <h2>Seller:</h2>
          <p> <%= @product.user.first_name %> <%= @product.user.last_name %> </p>
        </div>
          <h2 class="card-trip-pricing">R$<%= @product.price %></h2>
          <a href="#" class="btn btn_success">COMPRAR</a>
          <p><%= link_to "Delete", product_path(@product),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
      </div>
    </div>
  </div>
</div>
