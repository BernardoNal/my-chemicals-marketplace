<div class="card-container">
  <div class="product-card">
    <div class="product-image">
      <% if product.photo.attached? %>
        <%= cl_image_tag product.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
        <%= image_tag Faker::LoremFlickr.image(size: "70x70", search_terms: ['fertilizer'])%>
      <% end %>
    </div>
    <div class="product-info">
        <h2 class="product-title"><%= @product.name %></h2>
        <p class="product-description"><%= @product.description %></p>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <span class="product-price">US$<%= @product.price %></span>
        <% if current_user != @product.user %>
          <%= link_to "Comprar",product_purchases_path(product), data: {turbo_method: :post, turbo_confirm: "Are you sure?"} , class: "btn-add-to-cart"%>
        <% end %>
    </div>
  </div>
  <div class="seller-info">
    <h3>Seller</h3>
    <p><%= @product.user.first_name %> <%= @product.user.last_name %></p>
  </div>
</div>
